{
	"manifest_version": 2,
	"name": "Kaomojie",
	"version": "1.0",

	"description": "Use kaomojis more easily",

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"96": "icons/icon96.png"
	},

	"browser_action": {
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"64": "icons/icon64.png",
			"96": "icons/icon96.png"
		},
		"default_title": "Kaomojie",
		"default_popup": "popup/popup.html"
	},

	"permissions": [
		"storage"
	]
}
